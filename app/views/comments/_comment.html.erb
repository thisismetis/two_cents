<%= div_for comment do %>
  <span class="comment-author">
    <strong><%= comment.username.titleize %> said:</strong>
  </span>
  <span class="comment-body">
    <%= comment.body %>
  </span>
  <span class="comment-timestamp">
    <%= time_ago_in_words(comment.created_at) %> ago
  </span>
<% end %>
